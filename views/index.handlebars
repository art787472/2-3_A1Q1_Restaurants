

<!-- search bar -->
<div class="container search-bar">
  <!-- alert  -->



  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{input}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <a href="/restaurants/new-page">新增餐廳</a>
    </div>
    {{#if isNotFind}}
    <div class="alert alert-warning alert-dismissible fade show mb-2" role="alert">
  <span>抱歉！找不到<strong>{{searchKeyword}}</strong>的搜尋結果</span>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}
  </div>
</div>

<!-- restaurant list -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <div class="card-img__container"><img class="card-img-top" src=" {{this.image}}" alt="{{this.name}}"></div>

            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils "></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <a href="/restaurants/{{this._id}}/edit-page">編輯</a>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>