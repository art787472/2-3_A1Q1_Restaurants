<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">註冊</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">名稱</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="輸入名稱" value="{{ name }}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">信箱</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="輸入信箱" value="{{ email }}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="輸入密碼" value="{{ password }}">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">確認密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="再一次輸入密碼" value="{{ confirmPassword }}">
        </div>
        <button type="submit" class="btn btn-primary btn-block">註冊</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook 登入</a>
      </form>
      <p class="lead mt-4">
        已經有帳戶？ <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>