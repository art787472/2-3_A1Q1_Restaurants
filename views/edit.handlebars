<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-md-8 mx-auto mb-5">
      <form action="/restaurants/{{restaurant._id}}/edit" method="POST">

        <div class="form-row">
          <div class="form-group col-md-6">
              <label for="name">餐廳名稱</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="輸入餐廳名稱" value="{{restaurant.name}}" required>
          </div>
          <div class="form-group col-md-6">
            <label for="name_en">餐廳英文名稱</label>
            <input type="text" class="form-control" id="name_en" name="name_en" placeholder="輸入餐廳英文名稱" value="{{restaurant.name_en}}">
          </div>
        </div>
          

        <div class="form-group">
          <label for="category">料理種類</label>
          <input type="text" class="form-control" id="category" name="category" placeholder="料理種類" list="categories" value="{{restaurant.category}}">
          <datalist id="categories">
            <option value="中東料理">
            <option value="日本料理">
            <option value="義式餐廳">
            <option value="美式">
            <option value="酒吧">
            <option value="咖啡">
          </datalist>
        </div>

        <div class="form-group">
          <label for="name_en">餐廳圖片</label>
          <input type="text" class="form-control" id="image" placeholder="輸入餐廳圖片網址" name="image" value="{{restaurant.image}}">
        </div>

        <div class="form-group">
          <label for="location">餐廳地址</label>
          <input type="text" class="form-control" id="location" placeholder="輸入餐廳地址" name="location" value="{{restaurant.location}}">
        </div>

        <div class="form-group">
          <label for="phone">餐廳電話</label>
          <input type="tel" class="form-control" id="phone" placeholder="輸入餐廳電話" name="phone" value="{{restaurant.phone}}">
        </div>

        <div class="form-group">
          <label for="google_map">Google Map</label>
          <input type="text" class="form-control" id="google_map" placeholder="輸入 google 地圖" name="google_map" value="{{restaurant.google_map}}">
        </div>

                <div class="form-group">
          <label for="rating">評分
            <span class="badge badge-pill badge-danger font-weight-normal rating-badge">
              <span>4.5</span>
            <i class="fas fa-star fa-xs"></i>
            </span>
          </label>
          
          <input type="range" class="form-control-range" min="0" max="5" step="0.1" id="rating" name="rating" value="{{restaurant.rating}}">
        </div>

        <div class="form-group">
          <label for="description">描述</label>
          <textarea class="form-control" id="description" placeholder="跟我們分享餐廳的細節吧" name="description">{{restaurant.description}}</textarea>
        </div>

        <div class="col-md-4 mx-auto">
          <button class="btn btn-primary btn-block" type="submit" role="button">確認送出</button>
          <a class="btn btn-primary btn-block" href="/" role="button">取消返回</a>
        </div>

      </form>
    </div>
  </div>
</div>

<script> 
  const rating = document.querySelector('.form-control-range')
  const badge = document.querySelector('.rating-badge')
  rating.addEventListener('input', (e) => {
    console.log(e.target.value)
    badge.querySelector('span').textContent = e.target.value
  })

</script>